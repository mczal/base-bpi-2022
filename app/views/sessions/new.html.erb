<div class="row">
  <div class="col-lg-12">
    <div class="form-section">
      <div class="form-inner">
        <a href="login-1.html" class="logo">
          <img
            src="<%= image_url('SIAPLogo.png') %>"
            alt="logo"
            style="width:293px;height:auto;"
            >
        </a>
        <h3 style="margin-top:20px;">Sign Into Your Account</h3>
        <%= form_for :session, url: session_path, html: {class: 'elementor-form'} do |form| %>
          <div class="form-group form-box clearfix">
            <%# <input name="email" type="email" class="form-control" placeholder="Email Address" aria-label="Email Address"> %>
            <%= form.email_field :email,
            class: 'form-control',
            placeholder: 'Email Address',
            autocomplete: 'off',
            required: 1,
            style: 'padding: 1em;',
            'aria-label': "Email Address"
          %>
        <i class="flaticon-mail-2"></i>
          </div>
          <div class="form-group form-box clearfix">
            <%# <input name="password" type="password" class="form-control" autocomplete="off" placeholder="Password" aria-label="Password"> %>
            <%= form.password_field :password,
            class: 'form-control',
            placeholder: 'Password',
            required: 1,
            style: "padding: 1em;",
            autocomplete: "off",
            'aria-label': "Password"
          %>
        <i class="flaticon-password"></i>
          </div>
          <!--
            <div class="checkbox form-group form-box">
