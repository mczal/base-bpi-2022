    - if flash.present?
      = render 'shared/flash'

    = render 'shared/header'
    .d-flex.flex-column.flex-root
      .d-flex.flex-row.flex-column-fluid.page
        = render 'shared/sidebar'
        #kt_wrapper.d-flex.flex-column.flex-row-fluid.wrapper
          = render 'shared/header_desktop'
          = yield
          = render 'shared/footer'

    / = render 'shared/user_panel'
    = render 'shared/scrolltop'
