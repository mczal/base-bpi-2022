  body#kt_body.header-fixed.header-mobile-fixed.subheader-enabled.subheader-fixed.aside-enabled.aside-fixed.aside-minimize-hoverable.page-loading[
    class="#{'aside-minimize' if request.original_fullpath.match(/^\/#{current_company.slug}\/journals\/?/)}"
