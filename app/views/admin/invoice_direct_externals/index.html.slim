  .d-flex.flex-column-fluid
    .container-fluid
      = render "new"
      #Contract.card.card-custom.mt-4.d-none.d-block
        .card-header
          .card-title
            span.card-icon
              i.flaticon2-favourite.text-primary
            h3.card-label List Invoices Direct External
          .card-toolbar.justify-content-end
            button.btn.btn-primary.font-weight-bolder.mb-2[
              data-target="#add"
              data-toggle="modal"
              type="button"
            ]
              i.la.la-plus
              | Tambah Invoice Direct External

        .card-body
          css:
            .datatable.datatable-default.datatable-loaded > .datatable-table {
              overflow-x: scroll;
              width: 100%;
            }
          #kt_datatable.datatable.datatable-bordered.datatable-head-custom[
            data-admin--invoice-direct-externals--index-data-path=api_admin_invoice_direct_externals_index_path
