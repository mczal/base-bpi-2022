  .d-flex.flex-column-fluid
    .container-fluid
      .card.card-custom
        .card-header
          .card-title
            span.card-icon
              i.flaticon2-favourite.text-primary
            h3.card-label
              | List Kategori Akun
              br
              span.font-size-sm.text-dark-50.font-weight-bold
                | Total #{AccountCategory.count} Kategori Akun
          .card-toolbar.justify-content-end
            button.btn.btn-primary.font-weight-bolder.mb-2[
              data-target="#add"
              data-toggle="modal"
              type="button"
            ]
              i.la.la-plus
              | Tambah Kategori Akun
            = render partial: 'new'

        .card-body
          = render partial: 'edit'
          #kt_datatable.datatable.datatable-bordered.datatable-head-custom[
            data-admin--account-categories--index-data-path=api_admin_account_categories_index_path(slug: current_company.slug)
            data-controller="admin--account-categories--index"
          ]
