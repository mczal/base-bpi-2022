  <body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable" cz-shortcut-listen="true">
    <%- if flash.present? %>
      <%- flash.each do |type, message| %>
        <div style="z-index:100;position:fixed;width:100%;top:0;" class="alert alert-notice alert-custom alert-light-<%= type %> fade show mb-5" role="alert">
          <div class="alert-icon">
            <%- if type == "success" %>
              <i class="flaticon2-accept"></i>
            <%- else %>
              <i class="flaticon-warning"></i>
            <%- end %>
          </div>
          <div class="alert-text"><%= message.to_s.html_safe %></div>
          <div class="alert-close">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">
                <i class="ki ki-close"></i>
              </span>
            </button>
          </div>
        </div>
      <%- end %>
    <%- end %>
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
      <!--begin::Page-->
      <div class="d-flex flex-row flex-column-fluid page">
        <!--begin::Wrapper-->
        <div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper" style="padding-top:0;padding-left:0;">
          <!--begin::Content-->
          <div class="content pt-0 d-flex flex-column flex-column-fluid" id="kt_content">
            <!--begin::Section-->
            <!--end::Section-->
            <div
             class="card card-custom card-collapsed"
             data-card="true"
             id="kt_card_4"
             style="position:fixed;top:0;left:0;right:0;z-index:10;"
             data-controller='class-toggler'
             data-action='click->class-toggler#run'
             data-target='class-toggler.element'
             data-class='card-collapsed'
            >
              <div class="card-header bg-light-success">
                <div class="card-title">
                  <h3 class="card-label text-success font-weight-bolder">Nomor surat yang belum disetujui
                    <small class="ml-2 text-dark-75 font-weight-bold font-size-sm">(<%= @pending_approvals.count %> surat)</small>
                    <br>
                    <small class="text-dark-75 font-weight-bold font-size-sm">Pilih salah satu untuk lihat detail surat</small>
                  </h3>
                </div>
                <div class="card-toolbar">
                  <a
                   href="#"
                   class="btn btn-icon btn-primary"
                   style="position:fixed;top:14px;right:8px;"
                   data-card-tool="toggle"
                  >
                    <i
                      class="flaticon2-down"
                    >
                    </i>
                  </a>
                </div>
              </div>
              <div
                class="card-body"
                data-target='class-toggler.element'
                data-class='d-block'
                style="overflow:auto;height:90vh;"
              >
                <% @pending_approvals.each do |approval| %>
                  <a
                    href="<%= admin_approval_path(id: approval.id)  %>"
                    data-turbolinks="false"
                    class="my-1 mx-1 btn btn-light-<%= approval.approvable_color %> font-weight-bolder"
                    style="width:45%;"
                  >
                    No.: <%= approval.approvable&.number_evidence %>
                    <br/>
                    <span style="font-size:9px;">
                      (<%= approval.role %>)
                    </span>
                  </a>
                <% end %>
              </div>
            </div>
            <%= yield %>
            <!--end::Entry-->
          </div>
          <!--end::Content-->
        </div>
        <!--end::Wrapper-->
      </div>
      <!--end::Page-->
    </div>
    <!--end::Main-->
    <ul class="sticky-toolbar nav flex-column pl-2 pr-2 pt-3 pb-3 mt-4">
      <!--begin::Item-->
      <li class="nav-item mb-2" id="kt_demo_panel_toggle" data-placement="right">
        <a
          class="btn btn-sm btn-icon btn-bg-light btn-icon-success btn-hover-success"
          href="<%= root_path %>"
          title="Kembali ke Home"
          data-controller="tooltip"
        >
          <i class="flaticon-home"></i>
        </a>
      </li>
      <!--end::Item-->
    </ul>

    <svg
      id="SvgjsSvg1001"
      width="2"
      height="0"
      xmlns="http://www.w3.org/2000/svg"
      version="1.1"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      xmlns:svgjs="http://svgjs.com/svgjs"
      style="overflow: hidden; top: -100%; left: -100%; position: absolute; opacity: 0;"
    >
      <defs id="SvgjsDefs1002"></defs>
      <polyline id="SvgjsPolyline1003" points="0,0"></polyline>
      <path id="SvgjsPath1004" d="M0 0 "></path>
    </svg>
  </body>
</html>

